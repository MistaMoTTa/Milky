<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>
<br>
<p>
  <strong>Items:</strong>
  <% @list.items.each do |item| %>
  <span> <%= item.name %> </span>
  <strong>Quantity:</strong>
    <span> <%= item.quantity %> </span>
  <% end %>

</p>

<%= link_to 'New item', new_item_path, class:'btn btn-outline-dark' %> |
<%= link_to 'Edit', edit_list_path(@list), class:'btn btn-outline-dark' %> |
<%= link_to 'Back', lists_path , class:'btn btn-outline-dark'%>
